{
	"scripts": {
		"format": "prettier --write .",
		"commitlint": "commitlint --edit $1",
		"build:html": "minify src/index.html > dist/index.html",
		"build:css": "tailwindcss -i src/styles.css -o dist/main.min.css --minify",
		"build:js": "bun build src/main.ts --outfile=dist/main.min.js --target=browser --minify-syntax --minify-whitespace",
		"build": "bun run build:html && bun run build:css && bun run build:js && cp static/* dist/"
	},
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@iconify/json": "^2.2.252",
		"@iconify/tailwind": "^1.1.3",
		"@prettier/plugin-pug": "^3.1.0",
		"@tailwindcss/typography": "^0.5.15",
		"autoprefixer": "^10.4.20",
		"lefthook": "^1.7.16",
		"minify": "^11.4.1",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"pug-cli": "^1.0.0-alpha6",
		"tailwindcss": "^3.4.13"
	}
}
